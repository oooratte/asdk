<configuration>

    <appender name ="CONSOLE"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{"HH:mm:ss"} %.-1level [%5.5thread] %40.-40(%logger{0}.%method):%5.5line - %replace(%message){'\n', ' '}%n %exception{full}</pattern>
        </encoder>
    </appender>

    <appender name ="ASYNC_CONSOLE"
              class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CONSOLE" />
    </appender>

    <root level="INFO">
        <appender-ref ref="ASYNC_CONSOLE" />
    </root>

</configuration>
